{
  "name": "marcojetson/freckle",
  "type": "library",
  "description": "A minimalistic ORM built on top of Doctrine DBAL and heavily inspired by Spot2",
  "keywords": ["orm", "data mapper", "database"],
  "homepage": "https://github.com/marcojetson/freckle",
  "license" : "BSD-3",
  "require": {
    "php": ">=5.6.0",
    "doctrine/dbal": "2.5.*"
  },
  "require-dev": {
    "phpunit/phpunit": "5.*"
  },
  "autoload": {
    "psr-4": {
      "Freckle\\": "lib/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Freckle\\": ["lib/", "tests/"]
    }
  }
}
